<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <extend>../../project.xml</extend>
  <name>sakai-assignment2-pack</name>
  <groupId>sakaiproject</groupId>
  <artifactId>sakai-assignment2-pack</artifactId>
  <packaging>sakai-component</packaging>
  <properties>
    <deploy.type>components</deploy.type>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>src/webapp</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
        <filtering>false</filtering>
      </resource>
      <resource>
        <directory>${basedir}/../../bundle</directory>
        <includes>
        	<include>**/*.properties</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
  <dependencies>   
    <dependency>
      <groupId>sakaiproject</groupId>
      <artifactId>sakai-assignment2-logic-impl</artifactId>
      <version>${sakai.version}</version>
         <properties>
            <war.bundle>true</war.bundle>
         </properties>
    </dependency>  
    <dependency>
      <groupId>sakaiproject</groupId>
      <artifactId>sakai-assignment2-logic-api</artifactId>
      <version>${sakai.version}</version>
    </dependency>
        <dependency>
      <groupId>sakaiproject</groupId>
      <artifactId>sakai-assignment2-model</artifactId>
      <version>${sakai.version}</version>
    </dependency>
    <dependency>
      <groupId>sakaiproject</groupId>
      <artifactId>sakai-assignment2-dao-impl</artifactId>
      <version>${sakai.version}</version>
         <properties>
            <war.bundle>true</war.bundle>
         </properties>
    </dependency>
        <dependency>
      <groupId>sakaiproject</groupId>
      <artifactId>sakai-assignment2-hbm</artifactId>
      <version>${sakai.version}</version>
    </dependency>
    <dependency>
      <groupId>sakaiproject</groupId>
      <artifactId>sakai-util-api</artifactId>
      <version>${sakai.version}</version>
    </dependency>
    <dependency>
      <groupId>sakaiproject</groupId>
      <artifactId>sakai-util</artifactId>
      <version>${sakai.version}</version>
         <properties>
            <war.bundle>true</war.bundle>
         </properties>
    </dependency>
    <!-- generic DAO -->
      <dependency>
         <groupId>generic-dao</groupId>
         <artifactId>generic-dao</artifactId>
         <version>0.9.1</version>
         <properties>
            <deploy.target>shared</deploy.target>
         </properties>
      </dependency>
      
  </dependencies>
</project>
